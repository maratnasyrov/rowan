    "lint:markdown": "markdownlint '**/*.md' --fix --ignore 'node_modules'",
    "lint-staged": "lint-staged -r --config .lintstagedrc",
    "i18next:parse": "i18next 'src/**/*.{ts,tsx}'",
    "i18next:download": "localazy download -w ${LOCALAZY_WRITE_KEY} -r ${LOCALAZY_READ_KEY}",
    "i18next:upload": "localazy upload -w ${LOCALAZY_WRITE_KEY} -r ${LOCALAZY_READ_KEY}",
    "test": "npm run test:unit",
    "test:changed": "jest --passWithNoTests --onlyChanged --config=jest-unit.config.ts",
    "test:unit": "jest --passWithNoTests --config=jest-unit.config.ts",
    "test:visual": "jest --passWithNoTests --config=jest-visual.config.ts",
    "test:e2e": "playwright test",
    "storybook": "start-storybook -p 6006 -s ./public",
    "build-storybook": "build-storybook",
    "aws:config": "npm config set '//releaseband-971715240952.d.codeartifact.eu-central-1.amazonaws.com/npm/main/:_authToken' `aws codeartifact get-authorization-token --domain releaseband --domain-owner 971715240952 --query authorizationToken --output text`"
